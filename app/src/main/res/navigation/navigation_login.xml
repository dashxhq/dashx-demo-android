<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_login"
    app:startDestination="@id/nav_login">

    <fragment
        android:id="@+id/nav_login"
        android:name="com.dashxdemo.app.feature.login.fragment.LoginFragment"
        android:label="LoginFragment">

        <action
            android:id="@+id/action_nav_login_to_nav_register"
            app:destination="@id/nav_register" />

        <action
            android:id="@+id/action_nav_login_to_nav_forgot_password"
            app:destination="@id/nav_forgot_password" />

    </fragment>

    <fragment
        android:id="@+id/nav_register"
        android:name="com.dashxdemo.app.feature.login.fragment.RegisterFragment"
        android:label="RegisterFragment" />

    <fragment
        android:id="@+id/nav_forgot_password"
        android:name="com.dashxdemo.app.feature.login.fragment.ForgotPasswordFragment"
        android:label="ForgotPasswordFragment" />

</navigation>
