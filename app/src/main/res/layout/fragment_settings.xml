<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".feature.home.fragment.SettingsFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/settingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/createPostTextView"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/whenCreateAPost"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settingTextView" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/createPostNotificationTextView"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/createPostTextView"
        android:layout_marginTop="2dp"
        android:text="@string/createPostNotification"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/createPostTextView" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/createPostToggle"
        style="@style/SwitchStyle"
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="35dp"
        android:checked="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settingTextView"
        app:switchMinWidth="54dp" />


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="#D3D3D3"
        app:layout_constraintTop_toBottomOf="@id/createPostNotificationTextView" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bookmarksPostTextView"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/whenBookmarksAPost"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bookmarkPostNotificationTextView"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/bookmarksPostTextView"
        android:layout_marginTop="2dp"
        android:text="@string/bookmarksPostNotification"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bookmarksPostTextView" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/bookmarkPostToggle"
        style="@style/SwitchStyle"
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="35dp"
        android:checked="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:switchMinWidth="54dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancelButton"
        style="@style/OutlinedButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:text="@string/cancel"
        app:layout_constraintEnd_toStartOf="@id/saveButton"
        app:layout_constraintTop_toBottomOf="@id/bookmarkPostNotificationTextView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/saveButton"
        style="@style/FilledButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bookmarkPostNotificationTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>
