<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/coarseLocationButton"
        style="@style/FilledButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:text="@string/get_coarse_location"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/coarseLatitudeLabel"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/latitude"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/coarseLocationButton" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/coarseLatitudeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="19dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/coarseLatitudeLabel"
        app:layout_constraintTop_toBottomOf="@id/coarseLocationButton" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/coarseLongitudeLabel"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/longitude"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/coarseLatitudeLabel" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/coarseLongitudeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="18dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/coarseLongitudeLabel"
        app:layout_constraintTop_toBottomOf="@id/coarseLatitudeTextView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fineLocationButton"
        style="@style/FilledButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:text="@string/get_fine_location"
        app:layout_constraintTop_toBottomOf="@+id/coarseLongitudeLabel" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/fineLatitudeLabel"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/latitude"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fineLocationButton" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/fineLatitudeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="19dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/fineLatitudeLabel"
        app:layout_constraintTop_toBottomOf="@id/fineLocationButton" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/fineLongitudeLabel"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/longitude"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fineLatitudeLabel" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/fineLongitudeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="19dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/fineLongitudeLabel"
        app:layout_constraintTop_toBottomOf="@id/fineLatitudeTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>
